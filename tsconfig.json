{
  "compilerOptions": {
    "target": "es5",
    "moduleResolution": "node",
    "module": "CommonJS",
    "jsx": "react",
    "composite": true,
    "importHelpers": false,
    "outDir": "lib",
    "rootDir": "src",
    "allowJs": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationDir": "./types",
    "typeRoots": ["./src/types", "./node_modules/@types"]
  }
}
